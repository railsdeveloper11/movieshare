<h2> Add Movie Review </h2>
<%= form_for @review do |f| %>
  <%= f.fields_for :movie do |a|%>
    <%= a.label :movie_url %>
    <%= a.text_field :movie_url, required: true%>
  <% end %>
  <%= f.label :description %>:
  <%= f.text_field :description , required: true%><br />

  <%= f.label :rating %>:
  <%= f.number_field :rating, min: 1, max: 5, required: true %><br />

  <%= f.submit %>
<% end %>
