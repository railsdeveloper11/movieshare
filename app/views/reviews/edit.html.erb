<h2 class="text-center py-5"> Add Movie Review </h2>
<div class="container">
  <div class="shadow p-5">
    <%= form_for @review do |f| %>
      <div class="form-group">
        <%= f.label :description, for: "exampleInputPassword1" %>:
        <%= f.text_field :description , required: true, class: "form-control", id: "exampleInputPassword1", placeholder: "Description" %>
      </div>

      <div class="form-group">
        <%= f.label :rating, for: "exampleInputrating1" %>:
        <%= f.number_field :rating, min: 1, max: 5, required: true, class: "form-control", id: "exampleInputrating1" %>
      </div>
      <%= f.submit %>
    <% end %>
  </div>
</div>